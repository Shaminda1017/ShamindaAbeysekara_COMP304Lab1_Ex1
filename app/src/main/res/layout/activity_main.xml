<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:baselineAligned="false">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/first_fragment"
        android:layout_weight="1"
        android:name="com.example.shamindaabeysekara_comp304lab1_ex1.FirstFragment"
        tools:layout="@layout/first_fragment_layout">
    </fragment>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/second_fragment"
        android:layout_weight="2"
        android:name="com.example.shamindaabeysekara_comp304lab1_ex1.SecondFragment"
        tools:layout="@layout/second_fragment_layout">
    </fragment>

</LinearLayout>